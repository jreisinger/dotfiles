#!/usr/bin/perl
#
# Usage: suf FILENAME [suffix]
#
# Print FILENAME with new suffix. If FILENAME ends with a suffix, the suffix is
# replaced with the given suffix otherwise, the given suffix is appended.
#
# For example:
#   suf foo.bar baz     => foo.baz
#   suf foo     baz     => foo.baz
#   suf foo.bar         => foo
#   suf foo             => foo
#
#   for i in *.docx; do
#     echo -n "$i ? ";
#     read j; mv -i "$i" $j.docx;
#     pandoc --extract-media . -t markdown -o "$(suf "$j" mkdn)" "$j.docx";
#	done
#
# https://blog.plover.com/Unix/google-doc-to-markdown.html

use strict;
use warnings;

@ARGV == 2 or @ARGV == 1 or usage();
my ( $file, $suf ) = @ARGV;
$file =~ s/\.[^.]*$//;
if ( defined $suf ) {
    print "$file.$suf\n";
} else {
    print "$file\n";
}

sub usage {
    die "Usage: suf FILENAME [suffix]\n";
}
