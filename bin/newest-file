#!/usr/bin/perl
use strict;
use warnings;
use File::Find;
use Term::ANSIColor;

@ARGV = qw(.) unless @ARGV;

my ( $age, $name ) = ( -1, "" );

find(
    sub {
        return if not -f;
        return if $age > ( stat(_) )[9];
        $age  = ( stat(_) )[9];
        $name = $File::Find::name;
    },
    @ARGV
);

my $now      = time;
my $days_old = ( $now - $age ) / 3600 / 24;    # hours

print color('red') if $days_old > 7;

printf( "%-3d days old (%s, %s)\n", $days_old, scalar localtime $age, $name );

print color('reset');
