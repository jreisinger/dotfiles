#!/bin/bash

FILE=$1

function show_usage {
    echo "Usage: $0 [http://]<file-to-burn.mp3>"
    exit 1
}

[ -z "$FILE" ] && show_usage

if [[ $FILE == "http://"* ]]; then

    echo
    echo "--> We have URL here, let's get the file from the Web ..."

    basename=`echo ${FILE##*/}`
    OUTFILE="/var/tmp/$basename"

    if [[ -e $OUTFILE ]]; then
        echo "$OUTFILE already exists, not downloading it"
    else
        wget $FILE -O $OUTFILE || exit 1
        FILE=$OUTFILE
    fi
fi

echo
echo "--> Let's burn ..."
wodim dev=/dev/cdrw blank=fast && \
mp3cd --no-cd-text -d /dev/cdrw $FILE
