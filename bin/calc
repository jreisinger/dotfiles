#!/usr/bin/perl -s

if ($h) {
    print "Simple Perl eval based calculator\n";
    exit 0;
}

my $expr = "@ARGV";
$expr =~ s/\s+//g;    # allow whitespace in input numbers

my $res = eval "$expr";
die "Does not compute...\n" unless $res;

$res =~ s/(\d{1,3}?)(?=(\d{3})+$)/$1 /g;    # show thousands
print "@ARGV = $res\n";
